{
    "manifest_version": 3,
    "name": "十六进制课堂增强",
    "description": "十六进制课堂增强组件",
    "version": "0.1.0",
    "content_scripts": [{
        "js": ["scripts/content.js"],
        "matches": ["https://inclass.hexfuture.net/*"]
    }],
    "icons": {
        "16": "hexfuture.png",
        "48": "hexfuture.png",
        "128": "hexfuture.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": ["storage"],
    "background": {
        "service_worker": "scripts/background.js"
    }
}
